<header class="header">
  <h1>Eat the Burgers!</h1>
</header>

<div class="current-burger">
<h2>current burger!</h2>
<ul>
  {{#each burgers}}
    {{#unless devour}}
      {{> burgers/burger-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="devoured-burger">
<h2>Eat burger!</h2>
<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>

<div class="form">
<h2>Plus Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bu">Burger Name:</label>
    <input type="text" id="bu" name="name">
  </div>

  <div class="form-group">
    <label for="devour"></label><br>
    <input type="radio" name="devour" value="1" checked> Devour!<br>
    <input type="radio" name="devour" value="0"> Do not devour!
 </div>

  <button type="submit">Submit Burger</button>
</form>
</div>